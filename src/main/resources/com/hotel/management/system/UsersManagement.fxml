<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #f5f7fa;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hotel.management.system.controller.UsersController">

    <!-- ================= USERS TABLE ================= -->
    <center>
        <VBox spacing="10" style="-fx-padding: 15;">
            <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="System Users" />

            <TableView fx:id="usersTable" prefHeight="600">
                <columns>
                    <TableColumn fx:id="usernameCol" prefWidth="180" text="Username" />
                    <TableColumn fx:id="roleCol" prefWidth="120" text="Role" />
                    <TableColumn fx:id="phoneCol" prefWidth="160" text="Phone" />
                    <TableColumn fx:id="actionsCol" prefWidth="140" text="Actions" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- ================= ADD / EDIT USER FORM ================= -->
    <right>
        <VBox prefWidth="300" spacing="12" style="-fx-background-color: white; -fx-padding: 20;">

            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Add / Edit User" />

            <TextField fx:id="usernameField" promptText="Username" />
         <Separator prefWidth="200.0" />

            <PasswordField fx:id="passwordField" promptText="Password" />
         <Separator prefWidth="200.0" />

            <ComboBox fx:id="roleCombo" prefHeight="25.0" prefWidth="260.0" promptText="Select Role" />
         <Separator prefWidth="200.0" />

            <TextField fx:id="phoneField" promptText="Phone Number" />
         <Separator prefWidth="200.0" visible="false" />

            <HBox alignment="CENTER_RIGHT" prefHeight="26.0" prefWidth="260.0" spacing="10">

                <Button onAction="#onCancel" prefHeight="35" text="Clear" />
                <Button onAction="#onAddUser" prefHeight="26.0" prefWidth="61.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Save" />
            </HBox>

        </VBox>
    </right>

</BorderPane>
