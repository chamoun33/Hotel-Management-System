<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hotel.management.system.controller.RoomController">
    <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>

    <!-- Add Room Form -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
      <HBox prefHeight="0.0" prefWidth="765.0">
         <children>
              <Label style="-fx-text-fill: #333; -fx-font-size: 18; -fx-font-weight: bold;" text="Add New Room" />
            <Region prefHeight="65.0" prefWidth="485.0" HBox.hgrow="ALWAYS" />
            <Button onAction="#onClear" prefHeight="25.0" prefWidth="51.0" style="-fx-background-color: #666; -fx-text-fill: white; -fx-background-radius: 5;" text="Clear" />
         </children>
      </HBox>
        <HBox alignment="CENTER_LEFT" spacing="15">
            <VBox spacing="5">
                <Label style="-fx-text-fill: #666; -fx-font-size: 14;" text="Room Number *" />
                <TextField fx:id="roomNumberField" onAction="#onAddRoom" prefWidth="180" promptText="e.g., 101" />
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-text-fill: #666; -fx-font-size: 14;" text="Room Type *" />
                <ComboBox fx:id="roomTypeCombo" prefWidth="180">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Single" />
                            <String fx:value="Double" />
                            <String fx:value="Suite" />
                            <String fx:value="Deluxe" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-text-fill: #666; -fx-font-size: 14;" text="Price per Night *" />
                <TextField fx:id="roomPriceField" prefWidth="180" promptText="e.g., 100.00" />
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-text-fill: #666; -fx-font-size: 14;" text="Status *" />
                <ComboBox fx:id="roomStatusCombo" prefWidth="180">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Available" />
                            <String fx:value="Occupied" />
                            <String fx:value="Maintenance" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </VBox>
        </HBox>
      <HBox alignment="CENTER" prefHeight="36.0" prefWidth="765.0">
         <children>
            <VBox spacing="5">
               <children>
                  <Label style="-fx-text-fill: #666; -fx-font-size: 14;" text="Capacity *" />
                  <TextField fx:id="capacityField" prefWidth="180" promptText="e.g., 4" />
               </children>
            </VBox>
             <Region prefHeight="65.0" prefWidth="485.0" HBox.hgrow="ALWAYS" />
                     <Button fx:id="addRoomBtn" onAction="#onAddRoom" prefHeight="0.0" prefWidth="83.0" style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 8; -fx-pref-height: 30; -fx-pref-width: 100;" text="Add Room" />
         </children>
      </HBox>
    </VBox>

    <!-- Rooms Table -->
    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <Label style="-fx-text-fill: #333; -fx-font-size: 18; -fx-font-weight: bold;" text="All Rooms" />
        <TableView fx:id="roomsTable" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <columns>
                <TableColumn fx:id="roomNumberColumn" prefWidth="141.0" text="Room No." />
                <TableColumn fx:id="roomTypeColumn" prefWidth="103.0" text="Type" />
                <TableColumn fx:id="roomPriceColumn" prefWidth="165.0" text="Price" />
                <TableColumn fx:id="roomStatusColumn" prefWidth="130.0" text="Status" />
                <TableColumn fx:id="capacityColumn" prefWidth="126.0" text="Capacity" />
            <TableColumn fx:id="actionsColumn" prefWidth="126.0" text="Actions" />
            </columns>
        </TableView>
    </VBox>
</VBox>
