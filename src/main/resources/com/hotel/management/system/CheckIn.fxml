<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
    <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>

    <!-- Check-In Form -->
    <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

        <!-- Guest Selection Section -->
        <VBox spacing="15">
            <Label style="-fx-text-fill: #333; -fx-font-size: 18; -fx-font-weight: bold;" text="Select or Add Guest" />

            <HBox alignment="CENTER_LEFT" spacing="20">
                <VBox prefWidth="400" spacing="8">
                    <Label style="-fx-text-fill: #666; -fx-font-size: 14; -fx-font-weight: bold;" text="Select Existing Guest *" />
                    <ComboBox fx:id="existingGuestCombo" promptText="Search or select guest" style="-fx-padding: 10;" />
                    <Label style="-fx-text-fill: #999; -fx-font-size: 12; -fx-padding: 5 0;" text="OR" />
                    <Button fx:id="addNewGuestBtn" style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-background-radius: 5; -fx-pref-height: 35;" text="+ Add New Guest" />
                </VBox>

                <VBox spacing="5" style="-fx-padding: 0 0 0 20;">
                    <Label style="-fx-text-fill: #666; -fx-font-size: 14; -fx-font-weight: bold;" text="Guest Details:" />
                    <Label fx:id="selectedGuestPhone" style="-fx-text-fill: #666; -fx-font-size: 13;" text="Phone: -" />
                    <Label fx:id="selectedGuestEmail" style="-fx-text-fill: #666; -fx-font-size: 13;" text="Email: -" />
                    <Label fx:id="selectedGuestId" style="-fx-text-fill: #666; -fx-font-size: 13;" text="ID: -" />
                </VBox>
            </HBox>
        </VBox>

        <!-- New Guest Form (Initially Hidden) -->
        <VBox fx:id="newGuestForm" managed="false" spacing="15" visible="false">
            <Label style="-fx-text-fill: #333; -fx-font-size: 18; -fx-font-weight: bold;" text="New Guest Information" />

            <HBox spacing="20">
                <VBox prefWidth="350" spacing="8">
                    <Label style="-fx-text-fill: #666; -fx-font-size: 14; -fx-font-weight: bold;" text="Full Name *" />
                    <TextField fx:id="newGuestNameField" promptText="Enter guest full name" style="-fx-padding: 10;" />
                </VBox>

                <VBox prefWidth="350" spacing="8">
                    <Label style="-fx-text-fill: #666; -fx-font-size: 14; -fx-font-weight: bold;" text="Phone Number *" />
                    <TextField fx:id="newGuestPhoneField" promptText="Enter phone number" style="-fx-padding: 10;" />
                </VBox>
            </HBox>

            <HBox spacing="20">
                <VBox prefWidth="350" spacing="8">
                    <Label style="-fx-text-fill: #666; -fx-font-size: 14; -fx-font-weight: bold;" text="Email Address" />
                    <TextField fx:id="newGuestEmailField" promptText="Enter email address" style="-fx-padding: 10;" />
                </VBox>

                <VBox prefWidth="350" spacing="8">
                    <Label style="-fx-text-fill: #666; -fx-font-size: 14; -fx-font-weight: bold;" text="ID Proof Number *" />
                    <TextField fx:id="newGuestIdProofField" promptText="Enter ID/Passport number" style="-fx-padding: 10;" />
                </VBox>
            </HBox>

            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="saveGuestBtn" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5; -fx-pref-height: 35; -fx-pref-width: 120;" text="Save Guest" />
                <Button fx:id="cancelGuestBtn" style="-fx-background-color: #666; -fx-text-fill: white; -fx-background-radius: 5; -fx-pref-height: 35; -fx-pref-width: 100;" text="Cancel" />
            </HBox>
        </VBox>

        <!-- Booking Details Section -->
        <VBox spacing="15">
            <Label style="-fx-text-fill: #333; -fx-font-size: 18; -fx-font-weight: bold;" text="Booking Details" />

            <HBox spacing="20">
                <VBox prefWidth="350" spacing="8">
                    <Label style="-fx-text-fill: #666; -fx-font-size: 14; -fx-font-weight: bold;" text="Select Room *" />
                    <ComboBox fx:id="roomCombo" promptText="Choose available room" style="-fx-padding: 10;" />
                </VBox>

                <VBox prefWidth="350" spacing="8">
                    <Label style="-fx-text-fill: #666; -fx-font-size: 14; -fx-font-weight: bold;" text="Check-In Date *" />
                    <DatePicker fx:id="checkinDatePicker" style="-fx-padding: 10;" />
                </VBox>
            </HBox>

            <HBox spacing="20">
                <VBox prefWidth="350" spacing="8">
                    <Label style="-fx-text-fill: #666; -fx-font-size: 14; -fx-font-weight: bold;" text="Number of Nights *" />
                    <TextField fx:id="nightsField" promptText="Enter number of nights" style="-fx-padding: 10;" />
                </VBox>

                <VBox prefWidth="350" spacing="8">
                    <Label style="-fx-text-fill: #666; -fx-font-size: 14; -fx-font-weight: bold;" text="Total Amount" />
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label style="-fx-text-fill: #2196f3; -fx-font-size: 20; -fx-font-weight: bold;" text="\$" />
                        <Label fx:id="totalAmountLabel" style="-fx-text-fill: #2196f3; -fx-font-size: 32; -fx-font-weight: bold;" text="0.00" />
                    </HBox>
                </VBox>
            </HBox>
        </VBox>

        <!-- Action Buttons -->
        <HBox alignment="CENTER" spacing="15">
            <Button fx:id="clearBtn" style="-fx-background-color: #666; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 8; -fx-pref-height: 45; -fx-pref-width: 150;" text="Clear Form" />

            <Button fx:id="completeCheckinBtn" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-background-radius: 8; -fx-pref-height: 45; -fx-pref-width: 200;" text="Complete Check-In" />
        </HBox>
    </VBox>
</VBox>
