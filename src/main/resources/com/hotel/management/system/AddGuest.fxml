<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="444.0" prefWidth="515.0" spacing="12" style="-fx-background-color: white; -fx-padding: 20;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hotel.management.system.controller.AddGuestController">

    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Add New Guest" />
   <Label text="First Name">
      <font>
         <Font size="13.0" />
      </font>
   </Label>

    <TextField fx:id="firstNameField" promptText="First Name" />
   <Label text="Last Name">
      <font>
         <Font size="13.0" />
      </font>
   </Label>
    <TextField fx:id="lastNameField" promptText="Last Name" />
   <Label text="Phone Number">
      <font>
         <Font size="13.0" />
      </font>
   </Label>
    <TextField fx:id="phoneField" promptText="Phone Number" />
   <Label text="Email Addreess">
      <font>
         <Font size="13.0" />
      </font>
   </Label>
    <TextField fx:id="emailField" prefWidth="475.0" promptText="Email Address" />

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button onAction="#onCancel" text="Cancel" />
        <Button onAction="#onAddGuest" style="-fx-background-color: #2196f3; -fx-text-fill: white;" text="Add Guest" />
    </HBox>
</VBox>
