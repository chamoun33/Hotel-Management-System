<BorderPane minHeight="840" prefHeight="840.0" prefWidth="1000.0" style="-fx-background-color: #f5f7fa;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hotel.management.system.MainController">

    <!-- TOP HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="70" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <padding><Insets left="20" right="20" /></padding>

            <!-- Logo/Title -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <VBox spacing="0">
                    <Label prefHeight="46.0" prefWidth="183.0" style="-fx-text-fill: #2196f3; -fx-font-size: 20; -fx-font-weight: bold;" text="Hotel Management" />
                    <Label style="-fx-text-fill: #666; -fx-font-size: 14;" text="System" />
                </VBox>
            </HBox>
         <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />

            <!-- User Info -->
            <HBox alignment="CENTER" spacing="15">
                <VBox alignment="CENTER_RIGHT">
                    <Label fx:id="welcomeLabel" style="-fx-text-fill: #333; -fx-font-weight: bold;" text="Welcome, Admin" />
                    <Label fx:id="roleLabel" style="-fx-text-fill: #666; -fx-font-size: 12;" text="Administrator" />
                </VBox>
                <Button fx:id="profileBtn" style="-fx-background-color: #d3d3d3; -fx-background-radius: 5; -fx-pref-width: 50;">
                    <graphic>
                        <ImageView fitHeight="28" fitWidth="28">
                            <image>
                                <Image url="@../../../../assets/Images/profile-icon-white.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </HBox>
    </top>

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox prefHeight="630.0" prefWidth="225.0" spacing="0" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

            <!-- Navigation Title -->
            <Label style="-fx-text-fill: #888; -fx-font-size: 12; -fx-font-weight: bold; -fx-padding: 20 20 10 20;" text="NAVIGATION" />

            <!-- Menu Items -->
            <VBox spacing="5" style="-fx-padding: 0 10 20 10;">
                <Button fx:id="dashboardBtn" prefHeight="44.0" prefWidth="130.0" style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 5; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20;" text="ðŸ“Š Dashboard" />

                <Button fx:id="guestsBtn" prefHeight="44.0" prefWidth="130.0" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 14; -fx-background-radius: 5; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20;" text="ðŸ‘¥ Guests" />

                <Button fx:id="roomsBtn" prefHeight="44.0" prefWidth="130.0" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 14; -fx-background-radius: 5; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20;" text="ðŸ›ï¸ Rooms" />

                <Button fx:id="bookingBtn" prefHeight="44.0" prefWidth="130.0" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 14; -fx-background-radius: 5; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20;" text="ðŸ“… Booking" />

                <Button fx:id="checkinBtn" prefHeight="44.0" prefWidth="130.0" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 14; -fx-background-radius: 5; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20;" text="âœ… Check-In" />

                <Button fx:id="checkoutBtn" prefHeight="44.0" prefWidth="130.0" style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-font-size: 14; -fx-background-radius: 5; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20;" text="ðŸšª Check-Out" />
            </VBox>

            <!-- Stats Section -->
            <Separator style="-fx-padding: 0 20;" />
            <Label style="-fx-text-fill: #888; -fx-font-size: 12; -fx-font-weight: bold; -fx-padding: 20 20 10 20;" text="QUICK STATS" />

            <VBox spacing="8" style="-fx-padding: 0 20 20 20;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label style="-fx-text-fill: #4CAF50;" text="â—" />
                    <Label fx:id="sidebarAvailableLabel" style="-fx-text-fill: #666; -fx-font-size: 13;" text="Available: 25" />
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label style="-fx-text-fill: #f44336;" text="â—" />
                    <Label fx:id="sidebarOccupiedLabel" style="-fx-text-fill: #666; -fx-font-size: 13;" text="Occupied: 25" />
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label style="-fx-text-fill: #FF9800;" text="â—" />
                    <Label fx:id="sidebarMaintenanceLabel" style="-fx-text-fill: #666; -fx-font-size: 13;" text="Maintenance: 0" />
                </HBox>
            </VBox>
        </VBox>
    </left>

    <!-- MAIN CONTENT AREA -->
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true" style="-fx-background-color: transparent;">

            <content>
                <StackPane fx:id="contentArea" style="-fx-padding: 20;">
                    <fx:include source="DashboardContent.fxml" />
                </StackPane>
            </content>
        </ScrollPane>

    </center>

</BorderPane>
