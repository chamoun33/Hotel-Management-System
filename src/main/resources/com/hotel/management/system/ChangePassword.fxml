<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hotel.management.system.controller.ChangePasswordController">

    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Change Password" />

    <Label style="-fx-text-fill: #666;" text="Please enter your current password and choose a new one." />

    <PasswordField fx:id="currentPasswordField" promptText="Current Password" />
   <Separator prefWidth="200.0" visible="false" />

    <PasswordField fx:id="newPasswordField" promptText="New Password" />
   <Separator prefWidth="200.0" visible="false" />

    <PasswordField fx:id="confirmPasswordField" promptText="Confirm New Password" />
   <HBox alignment="BOTTOM_RIGHT" prefHeight="59.0" prefWidth="311.0">
      <children>
         <Button mnemonicParsing="false" onAction="#onCancel" style="-fx-pref-height: 20;" text="Cancel" />
         <Separator orientation="VERTICAL" prefHeight="59.0" prefWidth="14.0" visible="false" />
      
          <Button contentDisplay="CENTER" onAction="#onUpdatePassword" prefHeight="24.0" prefWidth="109.0" style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-size: 12; -fx-pref-height: 20;" text="Update Password" />
      </children>
   </HBox>

</VBox>
